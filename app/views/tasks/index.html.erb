<h1>Tasks</h1>

<div class="list-group">
    <%= link_to octicon("plus", {class: "btn-link"})+' Přidat nový úkol', new_task_path, class: "list-group-item" %>
</div>
<% @tasks.each do |task| %>
    <div class="list-group-item">
        <div class="d-flex justify-content-between">
            <h5 class="mb-1"><%= task.title %></h5>
        </div>
        <p class="mb-1"><%= task.note.nil? ? "" : task.note %></p>
        <small>
            <%= link_to 'Více...', task %>
            <%= link_to 'Upravit', edit_task_path(task) %>
            <%= link_to 'Odstranit', task, method: :delete, data: { confirm: 'Are you sure?' } %>
        </small>
    </div>
<% end %>
</div>
