<div class="form-inputs container">
  <h1>Přihlásit se</h1>

  <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="input-text d-lg-none">E-mail: <%= octicon "primitive-dot" %></div>
    <div class="input-group">
      <div class="input-group-prepend d-none d-lg-block">
        <span class="input-group-text">E-mail <%= octicon "primitive-dot" %></span>
      </div>
      <%= f.input_field :email,
                  required: false,
                  autofocus: true,
                  input_html: { autocomplete: "email" },
                  class: "form-control" %>
    </div><br />
    <div class="input-text d-lg-none">Heslo: <%= octicon "primitive-dot" %></div>
    <div class="input-group">
      <div class="input-group-prepend d-none d-lg-block">
        <span class="input-group-text">Heslo <%= octicon "primitive-dot" %></span>
      </div>
      <%= f.input_field :password,
                  required: false,
                  input_html: { autocomplete: "current-password" },
                  class: "form-control" %>
    </div><br />
    <label class="input-text">
      <%= f.input_field :remember_me, as: :boolean if devise_mapping.rememberable? %>
      <span>Zapamatujte si mě</span>
    </label>

    <div class="form-actions d-sm-flex justify-content-between">
      <%= f.button :submit, "Přihlásit se", class: "btn btn-primary order-1 order-sm-3" %>
      <%= render "users/shared/links" %>
    </div>
  <% end %>
</div>
